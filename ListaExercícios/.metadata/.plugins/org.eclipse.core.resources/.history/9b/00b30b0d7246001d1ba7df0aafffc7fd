package lista1.logica16;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		String nome;
		
		System.out.print("Digite um nome: ");
		nome = sc.nextLine();
		
		System.out.println("\nNome inteiro: " + nome);
		
		System.out.println("Primeiro caractere: " + nome.charAt(0));
		
		System.out.println("Último caractere: " + nome.charAt(nome.length()-1));
		
		System.out.println("Primeiro até o terceiro caractere: " + nome.charAt(0) + nome.charAt(1) + nome.charAt(2));
		
		System.out.println("Quarto caractere: " + nome.charAt(3));
		
		System.out.println("Todos os caracteres, exceto o primeiro: " + nome.substring(0, 7));
		
		sc.close();
	}

}
