package lista1.logica17;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		double base;
		double altura;
		
		System.out.print("Digite a base do retângulo: ");
		base = sc.nextDouble();
		
		System.out.print("Digite a altura do retângulo: ");
		altura = sc.nextDouble();
		
		double perimetro = (altura + altura) + (base + base);
		double area = base * altura;
		double diagonal = Math.sqrt((altura * altura) + (base * base));
			
		System.out.printf("Perímetro: %.2f", perimetro);
		System.out.printf("\nÁrea: %.2f", area);
		System.out.printf("\nDiagonal: %.2f", diagonal);
		
		sc.close();
	}

}
